<div class="header">
    <div class="logo">
    <h1>Your Dashboard</h1>
    </div>
</div>
{{#if postData}}
{{#each postData as |post|}}
<div class="card m-3">
    <div class="card-header">
    <a href="/post-update/{{post.id}}"><h4>{{post.title}}</h4></a>
  </div>
</div>
{{/each}}
{{else}}
<div class="row">
    <div class="col-12">
        <p>Please create a blog post</p>
    </div>
</div>
{{/if}}
<div class="row">
    <div class="col-12 text-center mt-3">
        <a href="/post-new" class="create-post"> + New Post</a>
    </div>
</div>
